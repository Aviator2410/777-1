<!--
777-200 TCAS-ATC control
-->

<PropertyList>
 <path>tcas-ctl.ac</path>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>TCAS_digit0</object-name>
        <object-name>TCAS_digit1</object-name>
        <object-name>TCAS_digit2</object-name>
        <object-name>TCAS_digit3</object-name>
    </effect>

    <animation>
        <type>select</type>
        <object-name>TCAS_digit0</object-name>
        <object-name>TCAS_digit1</object-name>
        <object-name>TCAS_digit2</object-name>
        <object-name>TCAS_digit3</object-name>
        <condition>
            <property>systems/electrical/outputs/avionics</property>
        </condition>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>TCAS_digit0</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>TCAS_digit1</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>TCAS_digit2</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>TCAS_digit3</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>TCAS.knob</object-name>
        <object-name>TCAS.btn</object-name>
        <property>instrumentation/transponder/mode-switch</property>
        <factor>-30</factor>
        <center>
            <x-m>0.01435</x-m>
            <y-m>0.04082</y-m>
            <z-m>0.01483</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

<!--right display controls/co-pilot-->

    <animation>
        <type>rotate</type>
        <object-name>TCAS-right.abv_blw</object-name>
        <property></property>
        <factor>-60</factor>
        <center>
            <x-m>-0.01119</x-m>
            <y-m>0.02610</y-m>
            <z-m>0.00374</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>TCAS-right.abs_rel</object-name>
        <property>instrumentation/radar/display-controls/abs-altitude</property>
        <factor>-60</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-0.01115</x-m>
            <y-m>0.04544</y-m>
            <z-m>0.00374</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>


<!--left display controls/captain-->

    <animation>
        <type>rotate</type>
        <object-name>TCAS-left.abv_blw</object-name>
        <property></property>
        <factor>-90</factor>
        <center>
            <x-m>-0-01119</x-m>
            <y-m>-0.04495</y-m>
            <z-m>0.00374</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>TCAS-left.abs_rel</object-name>
        <property>instrumentation/radar/display-controls/abs-altitude</property>
        <factor>-60</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-0.01115</x-m>
            <y-m>-0.02561</y-m>
            <z-m>0.00374</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

<!--ATC/transponder configuration-->
<animation>
        <type>rotate</type>
        <object-name>ATC.norm_altn</object-name>
        <property></property>
        <factor>60</factor>
        <center>
            <x-m>0.00416</x-m>
            <y-m>-0.03528</y-m>
            <z-m>0.00374</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

<animation>
        <type>rotate</type>
        <object-name>ATC.alt_src</object-name>
        <property></property>
        <factor>100</factor>
        <center>
            <x-m>0.01787</x-m>
            <y-m>-0.04512</y-m>
            <z-m>0.00374</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>



<!-- Hotspots -->

    <animation>
        <type>pick</type>
        <object-name>TCAS.knob</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/mode-switch</property>
                <step>1</step>
                <min>0</min>
                <max>4</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>TCAS.knob</object-name>
        <action>
            <button>3</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/mode-switch</property>
                <step>1</step>
                <min>0</min>
                <max>4</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>TCAS.knob</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/mode-switch</property>
                <step>-1</step>
                <min>0</min>
                <max>4</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>TCAS.knob</object-name>
        <action>
            <button>4</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/mode-switch</property>
                <step>-1</step>
                <min>0</min>
                <max>4</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Xpdr.knob</object-name>
        <action>
            <button>3</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/id-code</property>
                <step>1000</step>
                <min>0</min>
                <max>7700</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Xpdr.knob</object-name>
        <action>
            <button>4</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/id-code</property>
                <step>-1000</step>
                <min>0</min>
                <max>7700</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Xpdr.knob1</object-name>
        <action>
            <button>3</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/id-code</property>
                <step>100</step>
                <min>0</min>
                <max>7700</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Xpdr.knob1</object-name>
        <action>
            <button>4</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/id-code</property>
                <step>-100</step>
                <min>0</min>
                <max>7700</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>TCAS-left.abs_rel</object-name>
        <object-name>TCAS-right.abs_rel</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/radar/display-controls/abs-altitude</property>
            </binding>
        </action>
    </animation>

</PropertyList>
