<!--
777-200 Secondary Display 
-->

<PropertyList>
 <path>leicas.ac</path>

    <animation>
        <type>select</type>
        <object-name>LEICAS.screenoff</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>RUDDERpointer</object-name>
		<property>controls/flight/rudder</property>
		<min>-1.0</min>
		<max>1.0</max>
        <factor>-0.022</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R_ELEV</object-name>
        <object-name>L_ELEV</object-name>
		<property>controls/flight/elevator</property>
        <factor>0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R_AIL</object-name>
		<property>controls/flight/aileron</property>
        <factor>-0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>L_AIL</object-name>
		<property>controls/flight/aileron</property>
        <factor>0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R_FLPRN</object-name>
		<property>controls/flight/aileron</property>
        <interpolation>
            <entry> 
                <ind>-1.0</ind>  
                <dep>0.011</dep> 
            </entry> 
            <entry>  
                <ind>0</ind>  
                <dep>0.0</dep> 
            </entry> 
            <entry> 
                <ind>1.0</ind>  
                <dep>0.0</dep> 
            </entry> 
         </interpolation> 
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>L_FLPRN</object-name>
		<property>controls/flight/aileron</property>
        <interpolation>
            <entry> 
                <ind>-1.0</ind>  
                <dep>0.0</dep> 
            </entry> 
            <entry>  
                <ind>0</ind>  
                <dep>0.0</dep> 
            </entry> 
            <entry> 
                <ind>1.0</ind>  
                <dep>0.011</dep> 
            </entry> 
         </interpolation> 
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R_OIL_T</object-name>
		<property>engines/engine[0]/oilt-norm</property>
        <factor>-0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R_OIL_P</object-name>
		<property>engines/engine[0]/oilp-norm</property>
        <factor>-0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>L_OIL_T</object-name>
		<property>engines/engine[1]/oilt-norm</property>
        <factor>-0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>L_OIL_P</object-name>
		<property>engines/engine[1]/oilp-norm</property>
        <factor>-0.011</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>material</type><!--white-->
        <object-name>Eevator Trim</object-name>
        <object-name>Rudder Trim</object-name>
        <emission>
            <red>0.7</red>
            <green>0.7</green>
            <blue>0.7</blue>
        </emission>
        <ambient>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </ambient>
        <diffuse>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </diffuse>
        <specular>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </specular>
    </animation>

    <text>
        <name>Eevator Trim</name>
        <offsets>
            <x-m>0.0021</x-m>
            <y-m>-0.057</y-m>
            <z-m>-0.033</z-m>
        </offsets>
        <alignment>right-center</alignment>
        <axis-alignment>yz-plane</axis-alignment>
        <type type="string">number-value</type>
        <format type="string">%3.2f</format>
        <property>controls/flight/elevator-trim</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.2</character-aspect-ratio>
        <font-resolution>
            <width type="int">32</width>
            <height type="int">32</height>
        </font-resolution>
    </text>

    <text>
        <name>Rudder Trim</name>
        <offsets>
            <x-m>0.0021</x-m>
            <y-m>0.071</y-m>
            <z-m>-0.033</z-m>
        </offsets>
        <alignment>right-center</alignment>
        <axis-alignment>yz-plane</axis-alignment>
        <type type="string">number-value</type>
        <format type="string">%3.2f</format>
        <property>controls/flight/rudder-trim</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.2</character-aspect-ratio>
        <font-resolution>
            <width type="int">32</width>
            <height type="int">32</height>
        </font-resolution>
    </text>

</PropertyList>
