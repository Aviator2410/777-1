<!-- Hotspots -->
    <animation>
        <type>pick</type>
        <object-name>RC_swp.btn</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
             <binding>
                <command>nasal</command>
                <script>b777.Efis.swap_freq()</script>
            </binding>
        </action>
    </animation>

