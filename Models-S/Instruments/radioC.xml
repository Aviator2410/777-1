<!--
Syd Adams
777-200 radio
-->

<PropertyList>
    <path>Aircraft/777/Models-S/pedestal.ac</path>

    <animation>
        <name>comm1</name>
        <object-name>RC_freq</object-name>
        <object-name>RC_freq.001</object-name>
        <object-name>RC_freq.002</object-name>
        <object-name>RC_freq.003</object-name>
        <object-name>RC_freq.004</object-name>
        <object-name>RC_freq.005</object-name>
        <object-name>RC_freq.006</object-name>
        <object-name>RC_freq.007</object-name>
        <object-name>RC_stby</object-name>
        <object-name>RC_stby.001</object-name>
        <object-name>RC_stby.002</object-name>
        <object-name>RC_stby.003</object-name>
        <object-name>RC_stby.004</object-name>
        <object-name>RC_stby.005</object-name>
        <object-name>RC_stby.006</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/CPT-FLT-INST</property>
                <value>5</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/CPT-FLT-INST</property>
                    <value>5</value>
                </greater-than>
                <equals>
                    <property>instrumentation/rmu/unit/source</property>
                    <value>comm1</value>
                </equals>
            </and>
        </condition>
        <type>select</type>
        <object-name>RC_Radio.pwr</object-name>
        <object-name>comm1</object-name>
    </animation>

    <animation>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/CPT-FLT-INST</property>
                    <value>5</value>
                </greater-than>
                <equals>
                    <property>instrumentation/rmu/unit/source</property>
                    <value>comm2</value>
                </equals>
            </and>
        </condition>
        <type>select</type>
        <object-name>RC_Radio.pwr</object-name>
        <object-name>comm2</object-name>
    </animation>

    <animation>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/CPT-FLT-INST</property>
                    <value>5</value>
                </greater-than>
                <equals>
                    <property>instrumentation/rmu/unit/source</property>
                    <value>nav1</value>
                </equals>
            </and>
        </condition>
        <type>select</type>
        <object-name>RC_Radio.pwr</object-name>
        <object-name>nav1</object-name>
    </animation>

    <animation>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/CPT-FLT-INST</property>
                    <value>5</value>
                </greater-than>
                <equals>
                    <property>instrumentation/rmu/unit/source</property>
                    <value>nav2</value>
                </equals>
            </and>
        </condition>
        <type>select</type>
        <object-name>RC_Radio.pwr</object-name>
        <object-name>nav2</object-name>
    </animation>

    <animation>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/CPT-FLT-INST</property>
                    <value>5</value>
                </greater-than>
                <equals>
                    <property>instrumentation/rmu/unit/source</property>
                    <value>adf</value>
                </equals>
            </and>
        </condition>
        <type>select</type>
        <object-name>RC_Radio.pwr</object-name>
        <object-name>adf</object-name>
    </animation>

<!-- Active freq nav mode -->

    <animation>
        <type>textranslate</type>
        <object-name>RC_freq.007</object-name>
        <property>instrumentation/efis/radio-mode</property>
        <factor>0.1520</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>RC_freq.001</object-name>
        <property>instrumentation/efis/radio-selected</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>RC_freq.002</object-name>
        <property>instrumentation/efis/radio-selected</property>
